{
	"name": "twitch-chat-hype",
	"version": "2.0.0",
	"author": "Kyle Coburn",
	"description": "Chrome Extension to display most-used Twitch chat emotes in Theatre Mode.",
	"license": "ISC",
	"type": "module",
	"scripts": {
		"dev": "webpack -w --config build/webpack.dev.js",
		"build": "webpack --config build/webpack.prod.js"
	},
	"devDependencies": {
		"@ky-is/eslint-config": "^2.3.4",
		"@ky-is/twitch-extension-channel-manager": "^0.2.0",
		"@typescript-eslint/eslint-plugin": "^4.27.0",
		"@typescript-eslint/parser": "^4.27.0",
		"css-loader": "^5.2.6",
		"eslint": "^7.28.0",
		"mini-css-extract-plugin": "^1.6.0",
		"optimize-css-assets-webpack-plugin": "^6.0.0",
		"terser-webpack-plugin": "^5.1.3",
		"ts-loader": "^9.2.3",
		"typescript": "^4.3.2",
		"webpack": "^5.39.0",
		"webpack-cli": "^4.7.2",
		"webpack-merge": "^5.8.0"
	},
	"eslintConfig": {
		"extends": "@ky-is/eslint-config/typescript",
		"env": {
			"webextensions": true
		},
		"rules": {
			"@typescript-eslint/consistent-type-imports": {
				"prefer": "type-imports",
				"disallowTypeAnnotations": true
			}
		}
	},
	"eslintIgnore": [
		"dist/generated"
	],
	"_moduleAliases": {
		"@": "src"
	}
}
